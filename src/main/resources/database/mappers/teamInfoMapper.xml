		SELECT T.*, P.tpname,G.tgname 
		FROM twinsMemberInfo T, teamPostion P, teamGroup G 
		WHERE T.psnum = P.tpNum AND T.grNum = G.tgnum AND ( P.tpNum = #{psNum})
