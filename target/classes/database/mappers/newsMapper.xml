<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lg.t2.board.news.NewsDAO">


	<select id="getFileSelect" parameterType="BoardFileDTO" resultType="BoardFileDTO">
		select * from newsFiles where fileNum=#{fileNum}
	</select>
	
	<delete id="setFileDelete" parameterType="BoardFileDTO">
		delete newsFiles where fileNum=#{fileNum}
	</delete>
	
	<insert id="setFileInsert" parameterType="BoardFileDTO">
		insert into newsFiles values(file_seq.nextval, #{num}, #{fileName}, #{origineName})
	</insert>
	
	<select id="getSelect" parameterType="BoardDTO" resultMap="selectResult">
		select N.*, NF.*
		from news N left join newsFiles NF
		on N.num = NF.num
		where N.num=#{num}
	</select>
		
	<resultMap type="NewsDTO" id="selectResult">
		<id property="num" column="num"/>
		<result property="title" column="title"/>
		<result property="contents" column="contents"/>
		<result property="regDate" column="regDate"/>
		<collection property="boardFiles" javaType="java.util.List" ofType="BoardFileDTO">
			<id property="fileNum" column="fileNum"/>
			<result property="fileName" column="fileName"/>
			<result property="origineName" column="origineName"/>
		</collection>
		
	</resultMap>
	
<select id="getList" resultType="NewsDTO" parameterType="Pager">
	select * from
			(select rownum R, N.* from
				(select * from news where
					<choose>
						<when test="kind=='Title'">
							title
						</when>
						
						<when test="kind =='Contents'">
							contents
						</when>
						
						<otherwise>
							regdate
						</otherwise>
					
					</choose>
					
				  like '%' || #{search} || '%' and num > 0 order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="getTotalCount" resultType="Long" parameterType="Pager">
		select count(num) from news
		where 
		<choose>
			<when test="kind == 'Title'">
				title
			</when>
			
			<when test="kind == 'Contents'">
				contents
			</when>
			
			<otherwise>
				regdate
			</otherwise>
		</choose>
		like '%'||#{search}||'%' and num >0
	</select>

	<select id="getNum" resultType="java.lang.Long">
		select file_seq.nextval from dual
	</select>

	

 
</mapper>  